# create layout
BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.3
        Label:
            text: "Sort by: "
        Spinner:
            id: spinner
            text:app.current_sort
            background_color: (983, 134, 139,0.6)
            values: app.sort_choices
            on_text: app.change_sort(spinner.text)

        Label:
            text: "Add New Song..."
        Label:
            text: "Title: "
        TextInput:
            id: song_title
        Label:
            text: "Artist: "
        TextInput:
            id: song_artist
        Label:
            text: "Year: "
        TextInput:
            id: song_year
        Button:
            text: "Add song"
            on_release: app.add_songs()
            background_color: (983, 134, 139,0.6)
        Button:
            text: "Clear"
            on_press: app.press_clear()
            background_color: (255,0,0,0.7)
            on_release: app.press_clear()
    BoxLayout:
        orientation: 'vertical'

        Label:
            id: status
            size_hint_y: 0.1
            text: app.status_text

        BoxLayout:
            id: entriesBox
            cols: 1
            orientation: "vertical"

        Label:
            id: status2
            size_hint_y: 0.1
            text: app.status_text2

